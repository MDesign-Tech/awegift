rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Notifications collection rules
    match /notifications/{notificationId} {
      // Allow read access for authenticated users (security handled by API and page protection)
      allow read: if request.auth != null;

      // Allow write access only for admins and system
      allow create: if request.auth != null && (
        // Admins can create notifications
        isAdmin(request.auth.uid) ||
        // System service accounts can create notifications
        request.auth.token.admin == true
      );

      // Allow update only for marking as read or system updates
      allow update: if request.auth != null && (
        // Users can only mark their own notifications as read
        (resource.data.recipientId == request.auth.uid &&
         resource.data.recipientRole == 'user' &&
         request.resource.data.isRead == true &&
         request.resource.data.keys().hasOnly(['isRead', 'updatedAt'])) ||
        // Admins can update any notification
        isAdmin(request.auth.uid)
      );

      // Allow delete only for admins
      allow delete: if request.auth != null && isAdmin(request.auth.uid);
    }

    // Helper function to check if user is admin
    function isAdmin(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role == 'admin';
    }
    
    // Quotes collection rules
    match /quotes/{quoteId} {
      // Allow read access for the quote owner or admins
      allow read: if request.auth != null && (
        resource.data.userId == request.auth.uid ||
        isAdmin(request.auth.uid)
      );

      // Allow create for authenticated users (their own quotes)
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;

      // Allow update for admins or the quote owner (with restrictions)
      allow update: if request.auth != null && (
        resource.data.userId == request.auth.uid ||
        isAdmin(request.auth.uid)
      );

      // Allow delete for admins only
      allow delete: if request.auth != null && isAdmin(request.auth.uid);
    }

    // Orders collection rules
    match /orders/{orderId} {
      // Allow read access for the order owner or admins
      allow read: if request.auth != null && (
        resource.data.userId == request.auth.uid ||
        isAdmin(request.auth.uid)
      );

      // Allow create for authenticated users (their own orders)
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;

      // Allow update for admins or the order owner (with restrictions)
      allow update: if request.auth != null && (
        resource.data.userId == request.auth.uid ||
        isAdmin(request.auth.uid)
      );

      // Allow delete for admins only
      allow delete: if request.auth != null && isAdmin(request.auth.uid);
    }

    // Products collection rules
    match /products/{productId} {
      // Allow read for all authenticated users
      allow read: if request.auth != null;

      // Allow write operations only for admins
      allow write: if request.auth != null && isAdmin(request.auth.uid);
    }

    // Categories collection rules
    match /categories/{categoryId} {
      // Allow read for all authenticated users
      allow read: if request.auth != null;

      // Allow write operations only for admins
      allow write: if request.auth != null && isAdmin(request.auth.uid);
    }

    // Allow authenticated users to read their own user document
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && request.auth.uid == userId;
    }
  }
}